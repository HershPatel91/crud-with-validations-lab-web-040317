<h3>Edit Form</h3>

<%= form_for(@song) do |f| %>

  <label>Song name:</label><br>
  <%= f.text_field :title%><br>

  <label>Released</label><br>
  <%= f.check_box :released %><br>

  <label>Song release year</label><br>
  <%= f.text_field :release_year%><br> 

  <label>Song artist_name</label><br>
  <%= f.text_field :artist_name%><br> 

  <label>Song genre</label><br>
  <%= f.text_field :genre%><br>
  
  <%= f.submit %>
<% end %>